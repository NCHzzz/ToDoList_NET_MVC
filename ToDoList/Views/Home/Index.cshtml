@model ToDoListViewModel

<h1>To-Do List</h1>

<div class="text-center">
    <h1 class="display-4">To Do</h1>
    <ul class="list-group">
        @foreach (var item in Model.Items)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <!-- Button to mark as complete and display task content -->
                <div class="d-flex align-items-center">
                    <form asp-action="MarkComplete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm @(item.IsCompleted ? "btn-success" : "btn-warning")">
                            @(item.IsCompleted ? "✔️" : "❌")
                        </button>
                    </form>
                    <span class="mx-3"> @item.Text </span>
                </div>

                <!-- Delete button -->
                <form asp-action="Delete" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@item.Id" />
                    <button type="submit" class="btn btn-sm btn-danger">🗑️ Xóa</button>
                </form>
            </li>
        }
    </ul>

    <a class="btn btn-primary mt-3" href="/Home/Add">Thêm Task</a>
</div>
